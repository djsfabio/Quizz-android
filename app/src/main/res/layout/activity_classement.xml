            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/notreGris"
            android:textSize="20sp"
            android:text="" />

        <Button
            android:id="@+id/relancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relancer" />
    </LinearLayout>

</LinearLayout>